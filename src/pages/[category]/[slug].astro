---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// 生成静态路径
export async function getStaticPaths() {
  // 从所有集合获取文章
  const civilizationRootsArticles = await getCollection('文明根基');
  const evolutionArticles = await getCollection('演进轨迹');
  const systemsArticles = await getCollection('制度与创造');
  const futureArticles = await getCollection('主体与未来');
  const testArticles = await getCollection('测试文件夹');

  // 合并所有文章
  const allArticles = [
    ...civilizationRootsArticles,
    ...evolutionArticles,
    ...systemsArticles,
    ...futureArticles,
    ...testArticles
  ];

  // 生成路径
  return allArticles.map(article => {
    const slug = article.id.split('/').pop()?.replace('.md', '') || '';
    const category = article.collection;
    return {
      params: { category, slug },
      props: { article }
    };
  });
}

const { article } = Astro.props;
const { Content } = await article.render();
---

<BaseLayout>
  <article class="article">
    <header class="article-header">
      <h1 class="article-title">{ article.data.title }</h1>
      <div class="article-meta">
        <span class="article-author">作者：{ article.data.author }</span>
        <span class="article-date">日期：{ article.data.date.toLocaleDateString() }</span>
        <span class="article-category">分类：{ article.data.category }</span>
      </div>
    </header>

    <div class="article-content">
      <Content />
    </div>

    <footer class="article-footer">
      <a href={`/${article.collection}/`} class="back-link">返回 {article.collection}</a>
    </footer>
  </article>
</BaseLayout>

<style>
.article {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem 0;
}

.article-header {
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--border-color);
}

.article-title {
  font-size: 2.5rem;
  margin-bottom: 1rem;
  color: var(--text-primary);
  line-height: 1.2;
}

.article-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  color: var(--text-secondary);
  font-size: 0.9rem;
}

.article-content {
  margin-bottom: 2rem;
}

.article-content h2 {
  font-size: 2rem;
  margin: 2rem 0 1rem;
  color: var(--text-primary);
  border-bottom: 1px solid var(--border-color);
  padding-bottom: 0.5rem;
}

.article-content h3 {
  font-size: 1.5rem;
  margin: 1.5rem 0 1rem;
  color: var(--text-primary);
}

.article-content p {
  margin-bottom: 1rem;
  text-align: justify;
}

.article-content ul,
.article-content ol {
  margin-bottom: 1rem;
  padding-left: 2rem;
  list-style-position: outside;
  list-style-type: inherit;
}

/* 无序列表样式 */
.article-content ul {
  list-style-type: disc !important;
}

.article-content ul ul {
  list-style-type: circle !important;
  margin-bottom: 0;
  padding-left: 1.5rem;
}

.article-content ul ul ul {
  list-style-type: square !important;
  margin-bottom: 0;
  padding-left: 1.5rem;
}

/* 有序列表样式 */
.article-content ol {
  list-style-type: decimal !important;
}

.article-content ol ol {
  list-style-type: lower-alpha !important;
  margin-bottom: 0;
  padding-left: 1.5rem;
}

.article-content ol ol ol {
  list-style-type: lower-roman !important;
  margin-bottom: 0;
  padding-left: 1.5rem;
}

/* 列表项样式 */
.article-content li {
  margin-bottom: 0.5rem;
  line-height: 1.6;
  display: list-item;
}

/* 确保列表在所有浏览器中正确显示 */
.article-content ul li {
  list-style-type: disc;
}

.article-content ul ul li {
  list-style-type: circle;
}

.article-content ul ul ul li {
  list-style-type: square;
}

.article-content ol li {
  list-style-type: decimal;
}

.article-content ol ol li {
  list-style-type: lower-alpha;
}

.article-content ol ol ol li {
  list-style-type: lower-roman;
}

.article-content blockquote {
  border-left: 4px solid var(--accent-color);
  padding-left: 1rem;
  margin: 1rem 0;
  font-style: italic;
  color: var(--text-secondary);
}

.article-content video {
  display: block;
  max-width: 100%;
  height: auto;
  margin: 1rem 0;
  border-radius: 4px;
}

/* 文本格式化样式 */
.article-content strong {
  font-weight: 700;
  color: var(--text-primary);
}

.article-content em {
  font-style: italic;
  color: var(--text-primary);
}

.article-content del {
  text-decoration: line-through;
  color: var(--text-secondary);
}

/* 链接样式 */
.article-content a {
  color: var(--accent-color);
  text-decoration: none;
  border-bottom: 1px solid var(--accent-color);
  transition: all var(--transition);
}

.article-content a:hover {
  background-color: var(--accent-color);
  color: var(--bg-primary);
  padding: 0 2px;
  border-radius: 2px;
}

/* 行内代码样式 */
.article-content code {
  font-family: var(--font-mono), monospace;
  font-size: 0.9em;
  background-color: var(--code-bg);
  padding: 0.2em 0.4em;
  border-radius: 3px;
  color: var(--code-text);
}

/* 代码块样式 */
.article-content pre {
  background-color: var(--code-bg);
  border-radius: 6px;
  padding: 1rem;
  margin: 1rem 0;
  overflow-x: auto;
  border: 1px solid var(--border-color);
}

.article-content pre code {
  font-family: var(--font-mono), monospace;
  font-size: 0.9rem;
  line-height: 1.5;
  background: none;
  padding: 0;
  border: none;
  color: var(--code-text);
  display: block;
}

/* 水平线样式 */
.article-content hr {
  border: none;
  border-top: 1px solid var(--border-color);
  margin: 2rem 0;
  height: 0;
}

/* 表格样式 */
.article-content table {
  width: 100%;
  border-collapse: collapse;
  margin: 1rem 0;
  overflow-x: auto;
  display: block;
}

.article-content table th,
.article-content table td {
  padding: 0.75rem;
  text-align: left;
  border: 1px solid var(--border-color);
}

.article-content table th {
  background-color: var(--table-header-bg);
  font-weight: 600;
  color: var(--text-primary);
}

.article-content table tr:nth-child(even) {
  background-color: var(--table-row-bg);
}

/* 任务列表样式 */
.article-content ul.task-list {
  list-style: none;
  padding-left: 1.5rem;
}

.article-content ul.task-list li {
  position: relative;
  padding-left: 1.5rem;
}

.article-content ul.task-list li input[type="checkbox"] {
  position: absolute;
  left: -1rem;
  top: 0.3rem;
  transform: scale(1.2);
}

/* 脚注样式 */
.article-content .footnote {
  font-size: 0.85rem;
  color: var(--text-secondary);
  margin-top: 2rem;
  padding-top: 1rem;
  border-top: 1px solid var(--border-color);
}

.article-content .footnote-ref {
  font-size: 0.8em;
  vertical-align: super;
  color: var(--accent-color);
}

/* 定义列表样式 */
.article-content dl {
  margin: 1rem 0;
}

.article-content dt {
  font-weight: 600;
  margin-top: 0.5rem;
  color: var(--text-primary);
}

.article-content dd {
  margin-left: 1rem;
  margin-bottom: 0.5rem;
  color: var(--text-secondary);
}

/* 自动链接样式 */
.article-content a.auto-link {
  word-break: break-all;
}

/* 响应式表格 */
@media (max-width: 768px) {
  .article-content table {
    font-size: 0.85rem;
  }

  .article-content table th,
  .article-content table td {
    padding: 0.5rem;
  }

  /* 代码块响应式 */
  .article-content pre {
    padding: 0.75rem;
  }

  .article-content pre code {
    font-size: 0.8rem;
  }
}

/* 确保暗色模式下的可读性 */
@media (prefers-color-scheme: dark) {
  .article-content code {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .article-content pre {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .article-content table th {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .article-content table tr:nth-child(even) {
    background-color: rgba(255, 255, 255, 0.05);
  }
}

.article-footer {
  margin-top: 2rem;
  padding-top: 1rem;
  border-top: 1px solid var(--border-color);
  text-align: center;
}

.back-link {
  color: var(--accent-color);
  text-decoration: none;
  font-size: 1rem;
  transition: var(--transition);
  display: inline-block;
  padding: 0.5rem 1rem;
  border: 1px solid var(--accent-color);
  border-radius: 4px;
}

.back-link:hover {
  background-color: var(--accent-color);
  color: var(--bg-primary);
}

@media (max-width: 768px) {
  .article-title {
    font-size: 2rem;
  }

  .article-content h2 {
    font-size: 1.5rem;
  }

  .article-content h3 {
    font-size: 1.25rem;
  }
}
</style>